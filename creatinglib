/* main.c */

#include <stdio.h>

int fatorial (int n);

int main() {

                int num;

                printf (“Digite um numero:”);

                scanf(“%d”, &num);

                printf(“\nO fatorial de %d eh igual a %d”, num, fatorial(num));

                return 0;

}

/* Biblioteca.c */

int fatorial (int n){

                int i, resultado;

                resultado = 1;

                for(i=1; i <= n; i++)

                               resultado *= i;

                return resultado;            

}
